<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:id="@+id/drawer_layout"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:fitsSystemWindows="true">

<LinearLayout
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:orientation="vertical">

<RelativeLayout
android:layout_width="match_parent"
android:layout_height="wrap_content">

<android.support.v7.widget.Toolbar
android:id="@+id/toolbar"
android:layout_width="match_parent"
android:layout_height="?attr/actionBarSize"
android:background="@drawable/navy_color"
android:theme="@style/ThemeOverlay.AppCompat.Dark"
/>

<Button
android:id="@+id/home_button"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_centerHorizontal="true"


android:layout_centerInParent="true"
android:layout_centerVertical="false"
android:layout_weight="0.00"
android:adjustViewBounds="true"
android:background="@android:color/transparent"
android:text="Medium"
android:textColor="@android:color/background_light"
android:textSize="30sp"
android:textStyle="bold" />

</RelativeLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#FF2E3237"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:id="@+id/user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="이름"
                android:textColor="@android:color/holo_orange_light"/>

            <EditText
                android:id="@+id/name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@android:color/white"
                android:hint="FullName"
                android:inputType="textCapWords"
                android:padding="10dp"

                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"/>

            <TextView
                android:id="@+id/user_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="아이디"
                android:textColor="@android:color/holo_orange_light"/>

            <EditText
                android:id="@+id/nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@android:color/white"
                android:hint="아이디"
                android:inputType="textCapWords"
                android:padding="10dp"

                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"/>

            <TextView
                android:id="@+id/id_massage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textColor="@android:color/holo_red_dark"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/user_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="이메일"
                android:textColor="@android:color/holo_orange_light"/>

            <EditText
                android:id="@+id/email"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@android:color/white"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="10dp"

                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"/>

            <TextView
                android:id="@+id/user_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="비밀번호"
                android:textColor="@android:color/holo_orange_light"/>

            <EditText
                android:id="@+id/password"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@android:color/white"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="10dp"

                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"/>

            <!--LoginButton-->

            <TextView
                android:id="@+id/password_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textColor="@android:color/holo_red_dark"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/user_password_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="비밀번호확인"
                android:textColor="@android:color/holo_orange_light"/>

            <EditText
                android:id="@+id/password_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@android:color/white"
                android:hint="PasswordCheck"
                android:inputType="textPassword"
                android:padding="10dp"

                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"/>

            <TextView
                android:id="@+id/password_massage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textColor="@android:color/holo_red_dark"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/user_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="휴대폰"
                android:textColor="@android:color/holo_orange_light"/>

            <EditText
                android:id="@+id/phonenum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@android:color/white"
                android:hint="휴대폰번호(-제외)"
                android:inputType="phone"
                android:padding="10dp"

                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"/>

            <Button
                android:id="@+id/btnRegister"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:background="#ea4c88"
                android:text="등록하기"
                android:textColor="@android:color/white"/>

            <!--LinktoLoginScreen-->

        </LinearLayout>
    </ScrollView>

</LinearLayout>









</LinearLayout>

<android.support.design.widget.NavigationView
android:id="@+id/navigation_view"
android:layout_width="wrap_content"
android:layout_height="match_parent"
android:layout_gravity="start"
app:headerLayout="@layout/drawer_header"
app:menu="@menu/drawer"/>
</android.support.v4.widget.DrawerLayout>
